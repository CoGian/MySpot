<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA000000"
    tools:context=".AlarmActivity">

    <TextView
        android:id="@+id/costPerHourView"
        android:layout_width="155dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="Cost per hour:"
        android:textColor="#7191DB"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextCostPerHour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/alarmTimePicker"
        app:layout_constraintTop_toBottomOf="@+id/editTextInitialCost2" />

    <TextView
        android:id="@+id/initialCostView"
        android:layout_width="135dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:text="Initial cost:"
        android:textColor="#7191DB"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextInitialCost2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/alarmTimePicker"
        app:layout_constraintTop_toBottomOf="@+id/switchAlarm" />

    <EditText
        android:id="@+id/editTextCostPerHour"
        android:layout_width="130dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/alarmTimePicker"
        app:layout_constraintTop_toBottomOf="@+id/costPerHourView" />

    <EditText
        android:id="@+id/editTextInitialCost2"
        android:layout_width="129dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/costPerHourView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/alarmTimePicker"
        app:layout_constraintTop_toBottomOf="@+id/initialCostView"
        app:layout_constraintVertical_bias="0.0" />

    <TimePicker
        android:id="@+id/alarmTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchAlarm"
        android:layout_width="133dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:forceDarkAllowed="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbarTrackHorizontal="@color/colorPrimary"
        android:text="@string/AlarmOff"
        android:textColor="#7191DB"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/initialCostView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/alarmTimePicker"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/AlarmOff" />


</androidx.constraintlayout.widget.ConstraintLayout>
